<h2>Editing the Article</h2>

<% if @article.errors.any? %>
  <p>The following errors were encountered while creating new article:</p>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%=form_for @article do |f| %>
  <p>
    <%= f.label :title %>
    <br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %>
    <br/>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>

  <p>
    <%= link_to "Cancel", article_path %>
  </p>

<% end %>

<p>
  <%= link_to "Homepage", articles_path %>
</p>
