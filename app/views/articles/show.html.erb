<h1>Article</h1>
<br>
<div>
  <p>
    <b class="card-header">
      <%= link_to @article.title, article_path(@article) %>
    </b>
  </p>
</div>
<div>
  <p>
    <b>Description:</b> <%= @article.description %>
  </p>
</div>
<div>
  <p>
    <%= link_to "Edit article", edit_article_path(@article) %> || <%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Are you sure?"} %>
  </p>
</div>

<p>
  <%= link_to "Homepage", articles_path %>
</p>
