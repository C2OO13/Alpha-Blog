<h1 align="center">Alpha Bloggers</h1>
<br>
<div class="text-center">
  <ul class="listing ">
    <% @users.each do |user| %>
      <li><%= link_to gravatar_for(user), user_path(user) , size: 200 %></li>
      <b>
        <li class="article-title"><%= link_to user.username.upcase, user_path(user) %></li>
        <li><p><%= pluralize(user.articles.count, "article") if user.articles %></p></li>
      </b>
      <% if logged_in? && current_user.admin? %>
        <li><%= link_to "Delete User" , user_path(user), method: :delete,
                        data: {confirm: "Are you sure you want to delete user?"}, class: "btn btn-lg btn-danger" %></li>
      <% end %>
      <br>
    <% end %>
  </ul>
</div>